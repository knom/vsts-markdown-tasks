    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\src\\markdown2html\\markdown2html.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true,
            "env": {
                "NODE_ENV": "development",
                // "INPUT_markdownPath" : "Readme.md",
                "INPUT_mode": "multiFiles",
                "INPUT_markdownPathPattern": "**/*.md,*.md,!**/node_modules/**",
                // "INPUT_htmlPath": "markdown2html/sample/sample.html",
                // "INPUT_htmlPath": "markdown2html/sample/sample.html",
                // "INPUT_templatePath": "markdown2html/sample/sample.html.tmpl",
                "INPUT_parameters": "{\"title\":\"Sample Title\"}",
                "INPUT_passThruHTML": "true"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "outFiles": [],
            "sourceMaps": true
        }
    ]
}